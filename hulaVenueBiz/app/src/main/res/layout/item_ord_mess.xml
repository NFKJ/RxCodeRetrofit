<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_size_20p"
        android:layout_marginRight="@dimen/view_size_20p"
        android:layout_marginTop="@dimen/view_size_20p"
        android:background="@drawable/back_sys_mess_item"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_88p"
            android:layout_marginLeft="@dimen/view_size_20p"
            android:layout_marginRight="@dimen/view_size_20p"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="退款订单"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/view_size_30p" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017年1月11日13:32:50"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/view_size_20p" />
        </LinearLayout>

        <View style="@style/line_d8d8d8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_size_20p"
            android:layout_marginRight="@dimen/view_size_20p"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ord_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_size_37p"
                android:text="订单编号：055612312"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/view_size_24p" />

            <TextView
                android:id="@+id/tv_ord_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_size_5p"
                android:layout_marginTop="@dimen/view_size_5p"
                android:text="联系方式：1300000000"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/view_size_24p" />

            <TextView
                android:id="@+id/tv_ord_prise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额：230元"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/view_size_24p" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_size_33p"
                android:layout_marginTop="@dimen/view_size_28p"
                android:text="请登录呼啦管家PC端处理"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/view_size_28p" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>