<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="@dimen/view_size_22"
        android:id="@+id/tv_id"
        android:textSize="@dimen/view_size_22"
        android:layout_marginLeft="@dimen/view_size_22"
        android:text="0005151"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_below="@id/tv_id"
        android:layout_marginTop="@dimen/view_size_22"
        android:layout_marginLeft="@dimen/view_size_22"
        android:textSize="@dimen/view_size_22"
        android:text="venue name"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="@dimen/view_size_22"
        android:layout_marginLeft="@dimen/view_size_22"
        android:textSize="@dimen/view_size_22"
        android:text="2016/08/22   12:00-14:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/view_size_22"
        android:id="@+id/tv_status"
        android:textSize="@dimen/view_size_22"
        android:layout_alignParentRight="true"
        android:textColor="@color/red"
        android:layout_marginRight="@dimen/view_size_22"
        android:text="status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_check"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/view_size_22"
        android:padding="@dimen/view_size_22"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:src="@mipmap/define_empty"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/iv_select"
        android:padding="@dimen/view_size_22"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>