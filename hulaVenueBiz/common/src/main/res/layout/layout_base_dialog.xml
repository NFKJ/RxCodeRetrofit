<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_dialog"
        android:minHeight="130dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/dialog_contact_titlelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/dialog_contact_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:text="温馨提示"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_18" />
                </LinearLayout>

                <TextView
                    android:id="@+id/dialog_contact_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:lineSpacingExtra="5dp"
                    android:padding="15dp"
                    android:textColor="@color/c_333333"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/textcolorrowlines" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_contact_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_left_bg"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/app_cancel"
                android:textColor="@color/base_color"
                android:textSize="@dimen/text_size_16" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/textcolorrowlines" />

            <TextView
                android:id="@+id/dialog_contact_submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_right_bg"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/app_sure"
                android:textColor="@color/base_color"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
