<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/pull_to_load_footer_content"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/base_loading_background"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/pull_to_load_footer_progressbar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:indeterminateDrawable="@anim/pullto_progressbar"
            android:visibility="visible" />

        <TextView
            android:id="@+id/pull_to_load_footer_hint_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pull_up_text"
            android:textColor="@color/black"
            android:textSize="13dp" />
    </LinearLayout>
</LinearLayout>
