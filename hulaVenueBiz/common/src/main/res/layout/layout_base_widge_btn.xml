<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llActionBarLayout"
    style="@style/style_widget_btn"
    android:layout_width="@dimen/widget_view_size"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ivLeftDivider"
        android:layout_width="@dimen/widget_view_divider"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/ivBtnImg"
        android:padding="@dimen/widget_padding_size"
        android:layout_width="@dimen/widget_image_size"
        android:layout_height="@dimen/widget_image_size"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/tvBtnText"
        android:layout_width="@dimen/view_size_40"
        android:layout_height="@dimen/view_size_22"
        style="@style/style_widget_item"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivRightDivider"
        android:layout_width="@dimen/widget_view_divider"
        android:layout_height="match_parent" />

</LinearLayout>